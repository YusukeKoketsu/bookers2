<div class="container">
  <p class="notice" >
  <% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</p>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto" >
     <h2>User info</h2>
      <%= form_with model: @user do |f| %>
      <div class="form-group" >
        <div class="field_with_errors" >
         <label for="inputName">Name</label>
        </div>
        <div class="field_with_errors" >
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        </div>
      <div class="form-group" >
        <div class="field_with_errors" >
         <label for="inputImage">ProfileImage</label>
        </div>
        <div class="field_with_errors" >
         <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="form-group" >
        <div class="field_with_errors" >
         <label for="inputIntroduction">Introduction</label>
        </div>
        <div class="field_with_errors" >
         <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介文"%>
        </div>
        <%= f.submit 'Update User' %>

      <% end %>
    </div>
  </div>
</div>


